COMPANY_NAME=MyProfile
# Generate this using: npm run license:generate-secret
COMPANY_SECRET=your-company-secret-here

# App
NODE_ENV=development
PORT=5000
API_URL=https://localhost:8080
CLIENT_URL=http://localhost:3000
APP_NAME=My Profile

# Database
MONGODB_URI=mongodb://localhost:27017/my-profile

# JWT
# Generate these using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=1d

# Cookie
COOKIE_SECRET=your-cookie-secret-here

# SSL Configuration
SSL_ENABLED=true
SSL_KEY_PATH=certs/key.pem
SSL_CERT_PATH=certs/cert.pem
SSL_CHAIN_PATH=certs/cert.pem
ENABLE_HTTP2=true

# Email
SMTP_HOST=smtp.gmail.com
SMTP_SERVICE=gmail
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=your-email@gmail.com

# OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Additional Configuration
TEXTBELT_API_KEYS=your-textbelt-api-key
FORCE_DEV_SMS=true
CHROME_PATH=/usr/bin/chromium
