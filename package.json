{
  "name": "my-profile-ltd",
  "version": "1.0.0",
  "description": "MyProfile Backend - A secure and scalable authentication system",
  "main": "dist/app.js",
  "scripts": {
    "start": "NODE_NO_WARNINGS=1 node dist/app.js",
    "dev": "NODE_NO_WARNINGS=1 nodemon src/app.ts",
    "build": "tsc",
    "postinstall": "npm run build",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest"
  },
  "keywords": [
    "authentication",
    "typescript",
    "node",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
