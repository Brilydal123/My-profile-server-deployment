    "@types/passport": "^1.0.17",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/qrcode": "^1.5.5",
    "@types/spdy": "^3.4.9",
    "@types/speakeasy": "^2.0.10",
    "@types/twilio": "^3.19.3",
    "@types/ua-parser-js": "^0.7.39",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "canvas": "^3.0.0",
